<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFavoritos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textColor="#fff"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layoutX"
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_filme_seja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Poxa você ainda não favoritou nenhum filme :("
            android:textColor="#fff"
            android:textSize="24sp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_filmeFavoritoSeja"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_favorite"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txt_filme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="9sp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Clique neste ícone na tela do filme que curtir"
            android:textColor="#fff"
            android:textSize="18dp" />


    </LinearLayout>

</LinearLayout>